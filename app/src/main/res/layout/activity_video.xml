<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VideoActivity.VideoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Youtube Video"
            android:textAlignment="center"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_video_akarwangi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Akar Wangi"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_video_bayam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Bayam"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_video_bayamduri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Bayam Duri"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_video_belimbingwuluh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Belimbing Wuluh"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_video_blustru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Blustru"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_video_brotowali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Brotowali"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_video_daundewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Daun Dewa"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_video_daunkelor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Daun Kelor"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/btn_video_daunmiana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:minHeight="32dp"
            android:text="Daun Miana"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_video_daunngokilo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Daun Ngokilo"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/btn_video_daunpacarcina"
